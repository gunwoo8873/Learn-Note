<Window
  x:Class="WPF_Freamwork_GUI.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:WPF_Freamwork_GUI"
  mc:Ignorable="d"
  Title="MainWindow" Height="450" Width="800"> <!-- Application main title name and window height and width value -->

  <!-- Window InRayout Control -->
  <Grid Margin="10">
    <!-- Row layout -->
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Column layout -->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="150" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Left Element -->
    <Label Grid.Row="0" Grid.Column="0">Test SideBar</Label>
    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5,0,0,0">
      <!-- ... -->
    </StackPanel>

    <!-- Center Element -->
    <Label Grid.Row="0" Grid.Column="1">Test Center Contents</Label>
    <ListBox Grid.Row="1" Grid.Column="1" x:Name="ListNames" />

    <!-- Right Element-->
    <StackPanel Grid.Row="1" Grid.Column="2" Margin="5,0,0,0">
      <!-- Event logic is MainWindow.xaml.cs file to code edit -->
      <TextBox x:Name="InputElement" />
      <Button x:Name="ListAdd" Margin="0,5,0,0" Click="ElementAdd">Add</Button>
      <Button x:Name="ListClear" Margin="0,5,0,0" Click="ElementClear">Clear</Button>
    </StackPanel>
  </Grid>
</Window>
